		</mx:FormItem>
		
	</s:HGroup>
	
	
	<s:HGroup width="100%">
		<mx:HRule width="100%"/>
	</s:HGroup>
	<s:HGroup width="100%"
			  height="28"
			  verticalAlign="middle">
		<mx:FormItem label="血袋编号" color="blue"
					 labelWidth="65"
					 width="260">
			<s:TextInput id="txtProductCode"
						 width="100%" enter="productCode_enterHandler(event)"/>
		</mx:FormItem>
		<mx:FormItem label="血　型"
					 width="280"
					 labelWidth="47">
			<s:TextInput id="txtBloodName"
						 width="100%"
						 enabled="false"/>
		</mx:FormItem>
		<mx:FormItem label="成　份"
					 width="230">
			<s:TextInput id="txtTypeName"
						 width="100%"
						 enabled="false"/>
		</mx:FormItem>
		<mx:FormItem label="规　格"
					 width="100%">
			<s:TextInput id="txtSpec"
						 width="100%"
						 enabled="false"/>
		</mx:FormItem>
	</s:HGroup>
	
