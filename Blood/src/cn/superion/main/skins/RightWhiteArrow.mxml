<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
		minWidth="30" minHeight="25" 
		alpha.disabled="0.5" xmlns:skins="skins.*">
	
	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ [HostComponent("spark.components.Button")] ]]>
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- transitions -->
	<s:transitions>
		<s:Transition fromState="*" toState="*">
			<s:Fade targets="{[fill]}" 
					duration="100"/>
		</s:Transition>
	</s:transitions>
	
	<!--- border and fill -->
	<s:Rect top="0" right="0" bottom="0" left="0">
		<s:fill>
			<s:SolidColor id="fill" 
						  color="#000000"
						  alpha="0.5" alpha.over="1" alpha.down="1"/>
		</s:fill>
	</s:Rect>
	
	<s:Path width="10" height="15" 
			horizontalCenter="1" verticalCenter="0"
			data="M 10 7.5 L 0 0 L 0 15 L 10 7.5 Z">
		<s:fill>
			<s:SolidColor color="#FFFFFF" />
		</s:fill>
	</s:Path>
	
</s:Skin>