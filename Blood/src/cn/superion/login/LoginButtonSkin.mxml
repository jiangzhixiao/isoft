<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   minWidth="21" minHeight="25" 
				   alpha.disabled="0.5" xmlns:skins="skins.*">
	
	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ [HostComponent("spark.components.Button")] ]]>
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- transitions -->
	<s:transitions>
		<s:Transition fromState="*" toState="*">
			<s:Fade targets="{[fill]}" 
					duration="100"/>
		</s:Transition>
	</s:transitions>
	
	<!--- border and fill -->
	<s:Rect top="0" right="0" bottom="0" left="0">
		<s:fill>
			<s:SolidColor id="fill" 
						  color="#3F9AD8"
						  alpha="0" alpha.over="0.5" alpha.down="1"/>
		</s:fill>
	</s:Rect>

	<!-- skin part -->
	<!--- @optional -->
	<s:Label id="labelDisplay"
			 horizontalCenter="0" verticalCenter="1"
			 left="20" right="20"
			 textAlign="center"
			 maxDisplayedLines="1"/>
	
</s:SparkButtonSkin>